#three conditions:
    
language = "Java"
if language =="python":
    print("language is python")
elif language == "Java":
    print("Language is Java")
else:
    print("language is not the language we want")
    
    language = "python"
if language =="python":
    print("language is python")
elif language == "Java":
    print("Language is Java")
else:
    print("language is not the language we want")
    
        
language = "python"
if language =="pythonm":
    print("language is python")
